.wrapper{
    width: 100%;
    height: 100%;
    position: fixed;
    top:0;
    left:0;
    z-index: 1;
}

.mask {
    position: absolute;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.6);
    opacity: 0;
}

.picker {
    position: fixed;
    width: 100%;
    left: 0;
    bottom: 0;
    z-index: 5000;
    backface-visibility: hidden;
    transform: translateY(100%);
}

.hd {
    display: flex;
    height: 90rpx;
    background-color: #fff;
    position: relative;
    text-align: center;
    font-size: 32rpx;
    border-bottom: 1rpx solid #e5e5e5;
    justify-content: space-between;
}


.action{
    display: flex;
    align-items: center;
    color: [themeColor];
    padding:0 30rpx;
}

.action:first-child {
    color: #888
}



.bd{
    display: flex;
    position: relative;
    background-color: #fff;
    height: 476rpx;
    overflow: hidden
}

.group {
    flex: 1;
    position: relative;
    height: 100%
}



.picker__item {
    padding: 0;
    height: 34px;
    line-height: 34px;
    text-align: center;
    color: #000;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    /* font-size: 80%; */
    font-size: 0.95rem;
}

.picker__item_disabled {
    color: #999
}

