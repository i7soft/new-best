.wrapper{
    position: fixed;
    top:0;
    left:0;
    width:100%;
    height:100%;
    background-color: #000;
    z-index: 1;
}

.view,.frame-item,.view-frame,.frame-image{
    width: 100%;
    height: 100%;
}

.view{
    overflow: hidden;
}

.view-frame{
    height: 100%;
    width: 100%;
    display: flex;
    position: relative;
}

.frame-item{
    position: absolute;
    overflow: hidden;
}

.control-bars{
    position: absolute;
    top:0;
    left: 0;
    width:100%;
    height: 100%;
}

.top-bar,.bottom-bar{
    height: 90rpx;
    width: 100%;
    display: flex;
    position: absolute;
    color:#fff;
    text-shadow: 0 0 4rpx #000;
}
.top-bar{
    top: 10rpx;
}
.bottom-bar{
    bottom: 10rpx;
   
}

.bar-center{
    flex:1;
    text-align: center;
    
    font-size: 28rpx;
    margin: 12rpx;
    padding: 16rpx;
}

.bar-button{
    border: 1px solid rgba(0, 0, 0, 0.3);
    border-radius: 10rpx;
    background-color:rgba(0, 0, 0, 0.2);
    margin: 20rpx;
    padding: 8rpx;
    width: 54rpx;
    height: 54rpx;
    box-sizing: border-box;
}

.image-loader{
    position: absolute;
    left:0;
    top:0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.blur{
    -webkit-filter: blur(32px); 
    filter: blur(32px);
}

.dialog{
    opacity: 0;
    position: absolute;
    top:0;
    left: 0;
    width:100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.2);
    display: flex;
    justify-content: center;
    align-items: center;
}

.lpsi_view{
    position:relative;width:600rpx;height:600rpx
}

.lpsi_contianer{
    overflow: hidden;
    width: 100%;
    display: flex;
    height: 100%;
    flex-direction: column;
}

.lpsi_image{
    background-position: 50% 100%;
    background-size: contain;
    background-repeat: no-repeat;
    height: 440rpx;
    width: 100%;
}

.lpsi_result{
    background:#fff;
    border-radius:16rpx;
    font-size: 28rpx;
    margin:16rpx;
    padding:16rpx;
    width: auto;
    height: 360rpx;
}

.lpsi_text{
    color: #fff;
    font-size: 26rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    flex: 1;
    padding: 20rpx;
    margin-bottom: 28px;
}

.lpsi_text text{
    background: #000;
    padding: 4rpx 24rpx;
    border-radius: 24rpx;
    text-align: center;
}

.lpsi_close{
    color: #fff;
    background: #f1a4a4;
    font-size: 48rpx;
    width: 80rpx;
    height: 80rpx;
    border-radius: 64rpx;
    text-align: center;
    line-height: 80rpx;
    margin: 0 auto;
    margin-top: -48rpx;
    box-sizing: content-box;
}