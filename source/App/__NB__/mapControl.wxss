.map-control{
    position: absolute;
    right:24rpx;
    bottom:0;
    display: flex;
    flex-direction: column;
}

.btn{
    border: 1px solid #aaa;
    background: rgba(255, 255, 255, 0.9);
    box-shadow: 4rpx 4rpx 4rpx rgba(0, 0, 0, 0.2);
    color: #333;
}

.btn1{
    flex: 1;
    text-align: center;
    height: 28px;
    border-radius: 8rpx;
    line-height: 28px;
    
}

.btn2{
    display: flex;
    margin-bottom:16rpx;
    border-radius: 8rpx;
    font-size: 26rpx;
    padding: 8rpx;
    align-items: center;
    width:48rpx;
    height:48rpx;
    position: relative;
    margin-right: 8rpx;
}

.btn2 image{
    width:48rpx;
    height:48rpx;
}

.abs{
    position: absolute;
}

.abs_100{
    position: absolute;
    width:100%;
    height: 100%;
}

.rotate_scale{
    background: #aaa;
    border-radius:2px;
}

.btn-active{
    background: #ccc;
    border-color: #888;
}

.o_v{
    overflow: visible;
}