
.mask{
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
}
.container{
    position: fixed;
    z-index: 5000;
    top: 50%;
    left: 50%;
    background: rgba(17, 17, 17, 0.7);
    text-align: center;
    border-radius: 5px;
    color: #FFFFFF;
    opacity: 0;
    box-sizing: border-box;
    -webkit-backdrop-filter: saturate(180%) blur(20px);
    backdrop-filter: saturate(180%) blur(20px);
    width: 120px;
    min-height: 120px;
    -nb-phone-width:7.6em;
    -nb-phone-min-height:7.6em;
}
.icon{
    margin: 22px 0 0;
    display: block;
}
.icon-image,.icon-loading{
    width: 56px;
    height: 56px;
}
.title{
    display: block;
    max-width: 100%;
    word-break: break-all;
    padding: 8px;
    font-size: 14px;
    -nb-phone-font-size:28rpx;
}
.simple-toast{
    position: fixed;
    z-index: 5000;
    left: 50%;
    top: 50%;
    right: 0;
    text-align: center;
    opacity: 0;
}
.text{
    display: inline-block;
    vertical-align: middle;
    color: #ffffff;
    background-color: rgba(17, 17, 17, 0.7);
    padding: 10px 20px;
    border-radius: 5px;
    text-align: center;
    max-width: 80%;
    /* backdrop-filter:blur(12px); */
}

