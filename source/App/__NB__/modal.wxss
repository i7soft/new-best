.wrapper{
    width: 100%;
    height: 100%;
    position: fixed;
    top:0;
    left:0;
    z-index: 9999;
}

.mask {
    position: fixed;
    z-index: 10000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.6);
    opacity: 0;
}

.modal {
    position: fixed;
    z-index: 50000;
    width: 80%;
    max-width: 300px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: #ffffff;
    text-align: center;
    border-radius: 0.3rem;;
    overflow: hidden;
}

.hd{
    padding: 1.3em 1.6em 0.5em;
    font-weight: 400;
    font-size: 16px;
    color:#222;
}

.bd{
    padding: 0 1.6em 0.8em;
    min-height: 40px;
    font-size: 14px;
    line-height: 1.3;
    word-wrap: break-word;
    word-break: break-all;
    color: #757575;
    max-height: 300px;
    overflow-y: auto;
}

.ft{
    position: relative;
    line-height: 48px;
    font-size: 16px;
    display: flex;
    border-top:1rpx solid #ddd;
}

.btn {
    display: block;
    flex: 1;
    text-decoration: none;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    position: relative;
}