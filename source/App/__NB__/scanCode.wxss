.wrapper{
    position: fixed;
    top:0;
    left:0;
    width:100%;
    height:100%;
    background-color: #000;
    z-index: 1;
}

.mask{
    background-color:#000
}

.corner{
    width:16px;
    height: 16px;
    position: absolute;
    border:2px solid #fff; 
}

.scan-ani{
    animation:scan 3s linear infinite;
}

@keyframes scan
{
    from {
        transform:translateY(-20px);
    }
    to {
        transform:translateY(250px);
    }
}

.control-bar{
    position:absolute;bottom:0;left:0;width: 100%;display:flex;flex-direction:row;
    color:#fff;
    text-shadow: 0 0 4px #000;
}

.control-btn{
    font-size: 48rpx;
    padding: 48rpx;
    margin: 48rpx;
}